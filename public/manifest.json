{
    "manifest_version": 3,
    "name": "Form Input Saver",
    "version": "1.0.0",
    "description": "A Chrome extension that saves input data from forms to local storage",
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "index.html"
    }
  }
  